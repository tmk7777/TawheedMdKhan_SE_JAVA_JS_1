<%- include ('partials/header') %>

<div class="jumbotron" style="margin-top: 20px;">
    <div class="container">
        <center>
            <h1 class="display-4">Products</h1>
            <a class='btn btn-primary' href="/add-products">Add Products</a>
            <hr>

            <div class='row' style='margin: 0;'>

                <% products.forEach(function(products){ %>
                <div class='col-md-6'>
                    <div class="card" style="width: 30rem; margin-bottom: 15px;">
                        <div class="card-body">
                            <h5 class="card-title">Product Name: <%= products.name %></h5>
                            <h6 class="card-title">Price: <%= products.price %></h6>
                            <!-- <h6 class="card-title">Profit Percentage: </h6>
                            <h6 class="card-title">Product Type: </h6> -->
                            <a href="#" class="btn btn-primary">Buy</a>
                            <a href="#" class="btn btn-danger">Delete</a>
                            <a href="/<%= products.id %>/edit-products" class="btn btn-warning">Edit</a>
                        </div>
                    </div>
                </div>
                <% }) %>

            </div>
        </center>
    </div>
</div>

<%- include ('partials/footer') %>